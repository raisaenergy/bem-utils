{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["build", "node_modules/**/*", "*.test.ts"]
}
